<div class="row">
    <div class="col-md-6 mx-auto">
        <div class="card card-body">
            <img src="/img/logo.png" class="logo">
            <h3 class="text-center">新用户注册</h3>
            <form action="/users/register" method="POST">
                <div class="formgroup">
                    <label for="name">用户名</label>
                    <input type="text" value="{{name}}" name="name" class="form-control" required>
                </div>
                <div class="formgroup">
                    <label for="email">邮箱</label>
                    <input type="email" value="{{email}}" name="email" class="form-control" required>
                </div>
                <div class="formgroup">
                    <label for="password">密码</label>
                    <input type="password" value="{{password}}" name="password" class="form-control" required>
                </div>
                <div class="form-group">
                    <label for="password2">确认密码</label>
                    <input type="password" value="{{password2}}" name="password2" class="form-control" required>
                </div>
                <br>
                <button type="submit" class="btn btn-primary">注册</button>
            </form>
        </div>
    </div>
</div>