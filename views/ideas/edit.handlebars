{{#each errors}}
<div class="alert alert-danger">{{text}}</div>
{{else}}

{{/each}}
<div class="card card-body">
    <h3>想学的课程</h3>
    {{!-- 由于原生form中不包含PUT的提交方式，因此这里使用method-override这个包提供的写法 --}}
    <form action="/ideas/{{idea._id}}?_method=PUT" method="post">
    <input type="hidden" name="_method" value="PUT">
    <div class="form-group">
        <label for="title">标题</label>
        <input type="text" class="form-control" name="title" value="{{idea.title}}"> 
    </div>
    <div class="form-group">
        <label for="details">详情</label>
        <textarea class="form-control" name="details">{{idea.details}}</textarea>
    </div>
    <button type="submit" class="btn btn-primary">提交新编辑</button>
    </form>
</div>